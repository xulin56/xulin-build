{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowJs": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictNullChecks": true,
      "target": "es2015",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "lib": [
        "es5",
        "es2015",
        "es2017",
        "dom"
      ]
    },
    "paths": {
        "@/*": ["./src/*"]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }